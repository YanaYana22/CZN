<Window x:Class="CZN.Pages.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CZN.Pages"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

            <Button x:Name="btnLogin" Content="Войти" Height="30" Click="btnLogin_Click"/>

            <TextBlock Margin="0,20,0,0" HorizontalAlignment="Center">
                <Hyperlink x:Name="linkGuest" Click="linkGuest_Click">Войти как сотрудник</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
